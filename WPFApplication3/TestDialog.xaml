<?xml version='1.0' encoding='utf-8' ?>
<UserControl x:Class="WPFApplication3.TestDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WPFApplication3"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
      <Button Grid.Row="4" Grid.Column="2" Content="OK" Style="{StaticResource MaterialDesignRaisedButton}" IsDefault="True" Command="materialDesign:DialogHost.CloseDialogCommand" Margin="2,2,2,2"/>            
    </Grid>
</UserControl>